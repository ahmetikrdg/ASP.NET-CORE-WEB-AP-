@model HotelModel 

<form asp-controller="Home" asp-action="Update" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-row">
        <div class="col">
            <input type="text" asp-for="Name" class="form-control" placeholder="First name">
        </div>
        <div class="col">
            <input type="text" asp-for="City" class="form-control" placeholder="Last name">
        </div>
    </div>
    <button type="submit">Gönder</button>
</form>