@model IEnumerable<HotelModel>

<table>
    <td><a asp-controller="home" asp-action="Create">Otel Ekle</a></td>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.City</td>
            <td><a asp-controller="home" asp-action="Update" asp-route-id="@item.Id">Güncelle</a></td>
            <td>
                <form action="/home/Delete" method="post">
                    <input type="hidden" name="Id" value="@item.Id" />
                    <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                </form>
            </td>
        </tr>
    }
</table>                